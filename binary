um = int(input(' Digite um numero inteiro: '))

print('[1] PARA BINARIO')
print('[2] OCTADECIMAL')
print('[3] HEXADECIMAL')

opcao = int(input('Escolha uma opção: '))

if opcao== 1:
    binario=bin(num)[2:]
    print(binario)
elif opcao==2:
    octa = oct(num)[2:]
    print(octa)
elif opcao==3:
    hexa = hex(num)[2:]
    print(hexa)
else:
    print('VOCÊ NÃO FEZ UMA AÇÃO VÁLIDA! :)')

