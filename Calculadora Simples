n1 = float(input('Informe o primeiro numero: '))
n2 = float(input('Informe o segundo numero: '))
operacao = input('Escolha a operação (+, -, *, /): ')  # Solicitar a operação ao usuário

if operacao == '+':
    resultado = n1 + n2
    print(f'O resultado é {resultado}')
elif operacao == '-':
    resultado = n1 - n2
    print(f'O resultado é {resultado}')
elif operacao == '*':  # Adicionado ':' aqui
    resultado = n1 * n2
    print(f'O resultado é {resultado}')
elif operacao == '/':
    resultado = n1 / n2
    print(f'O resultado é {resultado}')
else:
    print('Essa calculadora tem recursos limitados, faça outra operação')
