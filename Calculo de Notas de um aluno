from colorama import Fore, Style

# Solicita as notas e converte para float
n1 = float(input('Informe a nota do primeiro Bimestre: '))
n2 = float(input('Informe a nota do segundo Bimestre: '))  
n3 = float(input('Informe a nota da recupera√ß√£o: ')) 

# Calcula a m√©dia
media = (n1 + n2 + n3) / 3 

# Exibe a m√©dia do aluno
print(f'A m√©dia do aluno √© {media:.2f}')

# Verifica a situa√ß√£o do aluno
if media >= 5:
    print(f'A m√©dia √© {media:.2f}, portanto o aluno est√° {Fore.GREEN}aprovado ‚úÖ{Style.RESET_ALL}.')  
else:
    print(f'A m√©dia √© {media:.2f}, o rendimento ficou abaixo do esperado, portanto o aluno est√° {Fore.RED}reprovado üò¢{Style.RESET_ALL}.')
